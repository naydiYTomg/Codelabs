@inject NavigationManager NavManager


<style>
    a {
        color: #eaeaea;
        font-family: 'JetBrains Mono NL';
        text-decoration: none;
    }
    .end-box{
        display: flex;
        width: 10%;
        height: 32px;
        justify-content: center;
        align-items: center;
        justify-self: center;
        align-self: center;
    }
    .toolbar {
        display: flex;
        justify-content: flex-end;
        width: 80%;
        height: 46px;
        background: var(--violet-color);
        margin-top: 8px;
        border-radius: 15px;
    }
    .box {
        display: flex;
        flex-direction: row;
        background: transparent;
        width: 100%;
        height: 62px;
        margin: 0px;
        padding: 0px;
    }
    .profile-btn {
        border-top-right-radius: 15px;
        border-bottom-right-radius: 15px;
        background-color: #42009e;
        width: 56px;
    }
    .profile-icon {
        display: flex;
        width: 42px;
        height: 42px;
        justify-self: center;
        align-self: center;
    }
    .main-btn {
        font-size: 32px;
    }
    .lessons-btn {
        display: flex;
        border-radius: 15px;
        border: 3px solid var(--pink-neon-color);
        align-items: center;
        font-size: 20px;
        text-indent: 5px;
        width: 145px;
        margin: 4px;
    }
</style>

<div class="box">
    <span class="end-box">
        <a class="main-btn" href="/">CODE/\ABS</a>
    </span>
    <div class="toolbar">
        <div style="display: flex;justify-content: flex-start;flex: 1;">
            <a class="lessons-btn" href="/all"
                    style="color: var(--text-color-primary)">ВСЕ УРОКИ</a>
        </div>
        <div style="display: flex;justify-content: flex-end;flex: 1;">
            <a class="profile-btn" href="/profile" onclick="">
                <img src="images/profile_icon.png" class="profile-icon" />
            </a>
        </div>
    </div>
    <div class="end-box" />
</div>