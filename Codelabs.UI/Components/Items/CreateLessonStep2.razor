<Tabs EnableFadeEffect="true" class="cool-tabs">
    <Tab Title="КОД" Active="true">
        <Content>
            <TextAreaInput Placeholder="Markdown код" @bind-Value="lessonModel.Content" style="padding: 10px 10px;margin-top: 0px;min-width: 800px;max-width: 800px;min-height: 600px;max-height: 600px;border-top-right-radius: 0px;border-top-left-radius: 0px;" class="form-item" />
        </Content>
    </Tab>
    <Tab Title="ПРОСМОТР">
        <Content>
            <div style="margin-top: 0px;width: 800px;height: 600px;border-top-right-radius: 0px;border-top-left-radius: 0px;padding: 10px 10px;" class="form-item">
                <Markdown style="max-height: 560px;overflow-y:auto;">@lessonModel.Content</Markdown>
            </div>
        </Content>
    </Tab>
</Tabs>

@code {
    [Parameter]
    public LessonInputModel lessonModel { get; set; }
}